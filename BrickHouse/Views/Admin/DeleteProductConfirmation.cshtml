@model BrickHouse.Models.Product

@{
    ViewData["Title"] = "Delete Product Confirmation";
}

<h2>Delete Product Confirmation</h2>

<div class="alert alert-danger" role="alert">
    Are you sure you want to delete the product: @Model.Name?
</div>

<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product ID
        </dt>
        <dd class="col-sm-10">
            @Model.ProductId
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <!-- Add more details if needed -->
    </dl>
</div>

<form asp-action="DeleteProduct" asp-route-productId="@Model.ProductId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a href="@Url.Action("CRUDProducts", "Admin")" class="btn btn-secondary">Cancel</a>
</form>