@{
    ViewData["Title"] = "Product Details Page";
    Layout = "~/Views/Shared/_NewLayout.cshtml"; // This sets the layout for this view
}
@model Product

<br />
<br />
<br />
<br />


<h1 class="about-title" style="text-align: center; font-weight: bold; font-family: 'Poppins', sans-serif;">@Model.Name</h1>
<span class="title-underline"></span>
<br /><br />
<div class="row product-details">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImgLink" alt="@Model.Name" class="img-fluid product-image" />
        </div>
        <div class="col-md-6">
            <p class="product-description">@Model.Description</p>
            <div class="price-and-add-to-cart">
                <span class="product-price">$@Model.Price</span>
                <span class="product-pieces">@Model.NumParts Pieces</span>
            </div>
            <form class="add-to-cart-form" method="post" asp-page="/Cart">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn btn-outline-success btn-sm add-to-cart-button">Add to Cart</button>
            </form>
        </div>
    </div>
</div>

@await Component.InvokeAsync("ProductRecommendation", new { productId = Model.ProductId })