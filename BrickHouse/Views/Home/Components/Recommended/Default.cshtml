

<style>
    .product-cards {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Adjust the gap between cards */
    }

    .product-card {
        border: 3px solid #ec5a53; /* Pink border, adjust thickness as needed */
        border-radius: 8px;
        padding: 10px;
        width: 200px; /* Adjust the width of each card */
        display: flex; /* Add this to make the card a flex container */
        justify-content: center; /* Center the image horizontally */
        align-items: center; /* Center the image vertically */
        overflow: hidden; /* Hide the overflow content */
        transition: transform 0.3s ease, border-color 0.3s ease; /* Smooth transition for hover effects */
    }

        .product-card:hover {
            transform: scale(1.05); /* Slightly increase the size of the card */
            border-color: #f88379; /* Change border color to a different shade of pink on hover */
        }

        .product-card img {
            max-width: 100%; /* Ensure the image is contained within the card */
            height: auto; /* Maintain the aspect ratio of the image */
            display: block; /* Removes the bottom space under the image */
        }

        .product-card .price {
            font-weight: bold;
        }

    .product-image-container {
        width: 100%;
        height: auto;
        max-width: 150px;
    }

    .product-details {
        margin: 10px; /* Add spacing between details */
    }

    .product-card-link {
        text-decoration: none;
    }

    .products-card {
        display: flex;
        justify-content: center;
        text-align: center;
        flex-wrap: wrap;
        gap: 20px;
    }



</style>


<div class="d-flex justify-content-center">
    <h1 style="color: #ec5a53; font-weight: 900;
                font-size: 2.5em; font-family: 'Pridi', serif;">
        Trending Now
    </h1>
</div>
<br />
<div class="products-card">
    @if (ViewBag.signedIn != null)
    {
        @foreach (var product in ViewBag.Products)
        {
            <div class="product-card">
                <a href="@Url.Action("ProductDetails", "Home", new { productId = product.ProductId })" class="product-card-link">
                    <img src="@product.ImgLink" alt="@product.Name">
                </a>
            </div>
        }
    }
</div>
<div class="products-card">
    @if (ViewBag.signedIn == true)
    {
            @foreach (var product in ViewBag.Products)
            {
                <div class="col-md-2-4">
                    <!-- Changed to accommodate 5 items in a row -->
                <a href="@Url.Action("ProductDetails", "Home", new { productId = product.ProductId })" class="product-card-link">
                    <img src="@product.ImgLink" alt="@product.Name">
                </a>
                </div>
            }
    }
</div>

<div class="d-flex justify-content-center">
    <a class="btn btn-oval" role="button" asp-controller="Home" asp-action="ProductPage">Start Building</a>
</div>
    