@{
}

@model IEnumerable<string>


@{
    string selectedColor = ViewBag.SelectedColor ?? "Select Color";
}


<form asp-action="ProductPage" method="get">
    <div class="form-group">
        <label>Colors:</label><br />
        @foreach (var color in Model)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="color" value="@color" @(ViewBag.SelectedColor != null && ViewBag.SelectedColor.Contains(color) ? "checked" : "") />
                <label class="form-check-label">@color</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Apply Filters</button>
</form>


