@{
}

 @model IEnumerable<string>

@{
    string selectedColor = ViewBag.SelectedColor ?? "Select Color";
}

<div class="form-group">
    <label>Colors:</label><br />
    @foreach (string color in Model ?? Enumerable.Empty<string>())
    {
        <div class="form-check">
            @{
                // Check if the ViewBag contains selected colors
                bool isChecked = ViewBag.SelectedColors != null && ViewBag.SelectedColors.Contains(color);
            }
            <input class="form-check-input" type="checkbox" name="color" value="@color" @(isChecked ? "checked" : "") />
            <label class="form-check-label">@color</label>
        </div>
    }
</div>

