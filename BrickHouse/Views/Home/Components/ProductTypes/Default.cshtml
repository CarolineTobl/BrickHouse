@{
}

@model IEnumerable<string>


@{
    string selectedCategory = ViewBag.SelectedProductType ?? "Select Category";
    string selectedColor = ViewBag.SelectedColor ?? "Select Color";
}


<form asp-action="ProductPage" method="get">
    <div class="form-group">
        <label>Categories:</label><br />
        @foreach (string category in Model ?? Enumerable.Empty<string>())
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="category" value="@category" @(ViewBag.SelectedCategories != null && ViewBag.SelectedCategories.Contains(category) ? "checked" : "") />
                <label class="form-check-label">@category</label>
            </div>
        }
    </div>

    <div class="form-group">
        <label>Colors:</label><br />
        @foreach (string category in Model ?? Enumerable.Empty<string>())
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="category" value="@category" @(ViewBag.SelectedColors != null && ViewBag.SelectedColors.Contains(category) ? "checked" : "") />
                <label class="form-check-label">@category</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Apply Filters</button>
</form>



