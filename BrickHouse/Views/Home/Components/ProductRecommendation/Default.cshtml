<style>
    .product-cards {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Adjust the gap between cards */
    }

    .product-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 10px;
        width: 200px; /* Adjust the width of each card */
    }

    .product-card h4 {
        margin-top: 0;
        margin-bottom: 5px;
    }

    .product-card .price {
        font-weight: bold;
    }
</style>


<div class="product-cards">
    @foreach (var productInfo in Model.ProductInfos)
    {
        <a href="https://brickhouse.azurewebsites.net/Home/ProductDetails?productId=@productInfo.ProductId" class="product-card-link">
            <div class="product-card">
                <h4>@productInfo.Name</h4>
                <img src="@productInfo.ImgLink" alt="Product Image" />
                <p class="price">$@productInfo.Price</p>
            </div>
        </a>
    }
</div>



