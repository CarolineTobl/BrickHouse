@page
@{
    Layout = "/Views/Shared/_HomeLayout.cshtml";
}
@model AccountDetailsModel

@{
    ViewData["Title"] = "Finish Your Profile";
}

<h1>@ViewData["Title"]</h1>

<div class="banner-gradient">
    <div class="account-details-container text-center">
        <h1 class="account-details-title">Thanks for choosing BrickHouse!</h1>
        <h2 class="account-details-subtitle">Finish your profile</h2>
        
        <form id="account-details" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="First Name" />
                <input type="text" class="form-control" placeholder="Last Name" />
                <select class="form-control">
                    <option>Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
                <input type="date" class="form-control" placeholder="Birthday" />
                <select class="form-control">
                    <option>Country</option>
                    <!-- Populate with countries -->
                </select>
            </div>
            <button type="submit" class="btn account-details-btn">Let's get building!</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

