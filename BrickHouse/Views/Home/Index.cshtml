@section Scripts {
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        // When the user scrolls the page, execute the function
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            // Get the navbar
            var navbar = document.querySelector(".navbar");
            // Specify the scroll position in pixels you want to trigger the color change
            if (window.pageYOffset > 500) {
                // When the user scrolls down 50px from the top of the document, add the "scrolled" class to the navbar
                navbar.classList.add("scrolled");
            } else {
                // When the user is at the top of the document, remove the "scrolled" class
                navbar.classList.remove("scrolled");
            }
        }
    </script>
}
