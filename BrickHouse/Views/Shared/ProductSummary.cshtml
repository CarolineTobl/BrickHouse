@using BrickHouse.Infrastructure
@{
    ViewData["Title"] = "ProductSummary";
}

@model Product


<div class="card m-1 p-1">
    <a asp-controller="Home" asp-action="ProductDetails" asp-route-productId="@Model.ProductId">
    <h4>
        @Model.Name
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@Model.NumParts Peices </small></span>
    </h4>

    <img src="@Model.ImgLink" width="200px" />
    </a>
    <br />
    <h6>$@Model.Price</h6>
    <h6>@Model.PrimaryCategory</h6>
    <h6>@Model.SecondaryCategory</h6>
    <h6>@Model.TertiaryCategory</h6>

    <form id=@Model.ProductId method="post" asp-page="/Cart">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn-outline-success btn-sm float-end">Add to Cart</button>
    </form>

</div>
