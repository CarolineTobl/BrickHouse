@{
}


@model IEnumerable<string>

    <div class="d-grid gap-2">
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index" asp-route-ProductType="" asp-route-pageNum="">Home</a>

        @foreach(string pt in Model ?? Enumerable.Empty<string>())
            {
                <a class="btn @(pt == ViewBag.SelectedProductType ? "btn-primary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Index" asp-route-ProductType="@pt" asp-route-pageNum="1">@pt</a>
            }
    </div>