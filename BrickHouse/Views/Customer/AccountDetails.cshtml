@model AccountDetailsViewModel

@{
    ViewData["Title"] = "Please Finish Setting Up Your Profile Before Continuing ";
    Layout = "~/Views/Shared/_NewLayout.cshtml"; // Ensure it uses the same layout as Checkout for consistent styling
}

<br /><br /><br />

<div class="checkout-container">
    <!-- Use the same container class for consistent styling -->
    <h2 class="checkout-header">@ViewData["Title"]</h2> <!-- Use the same header class -->

    <form asp-action="AccountDetails" method="post" class="checkout-form">
        <!-- Use the same form class -->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="FirstName" class="form-control checkout-select" placeholder="First Name" /> <!-- Use checkout-select for input styling -->
        <span asp-validation-for="FirstName" class="text-danger"></span>

        <input asp-for="LastName" class="form-control checkout-select" placeholder="Last Name" />
        <span asp-validation-for="LastName" class="text-danger"></span>

        <select asp-for="Gender" class="form-control checkout-select">
            <!-- Options omitted for brevity -->
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>

        <input asp-for="BirthDate" type="date" class="form-control checkout-select" placeholder="Birthday" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>

        <select asp-for="Country" class="form-control checkout-select">
            <!-- Options omitted for brevity -->
        </select>
        <span asp-validation-for="Country" class="text-danger"></span>

        <button type="submit" class="btn btn-confirm-checkout">Let's get building!</button> <!-- Use the same button class -->
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
